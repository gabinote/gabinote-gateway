<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%logger{0}:%line] - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="debug"/>
    <logger name="com.gabinote" level="debug"/>
    <logger name="org.testcontainers" level="debug"/>
    <!-- The following logger can be used for containers logs since 1.18.0 -->
    <logger name="tc" level="INFO"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="OFF"/>
    <!-- Spring Cloud Gateway Core & 라우팅 -->
    <!--    <logger name="org.springframework.cloud.gateway" level="DEBUG"/>-->
    <!--    <logger name="org.springframework.cloud.gateway.handler" level="DEBUG"/>-->
    <!--    <logger name="org.springframework.cloud.gateway.route" level="DEBUG"/>-->

    <!-- 라우팅 필터 진입 확인 -->
    <!--    <logger name="org.springframework.cloud.gateway.filter.NettyRoutingFilter" level="DEBUG"/>-->
    <!--    <logger name="org.springframework.cloud.gateway.filter.ForwardRoutingFilter" level="DEBUG"/>-->

    <!-- Reactor Netty HTTP client wire-tap -->
    <!--    <logger name="reactor.netty.http.client.HttpClientConnect" level="DEBUG"/>-->
    <!--    <logger name="reactor.netty.http.client.HttpClientOperations" level="DEBUG"/>-->
    <!--    <logger name="reactor.netty" level="DEBUG"/>-->

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>